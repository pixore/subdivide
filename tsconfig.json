{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "cypress/**/*",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "*.config.js",
    "coverage/*"
  ]
}
